<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lavender"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:gravity="center">


    <EditText
        android:layout_width="match_parent"
        android:hint="Mail"
        android:textAlignment="center"
        android:inputType="textEmailAddress"
        android:id="@+id/giris_mail"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_width="match_parent"
        android:hint="Password"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:inputType="textPassword"
        android:id="@+id/giris_password"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:onClick="girisYap"
        android:hint="Login"
        android:layout_marginTop="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:hint="Name"
        android:textAlignment="center"
        android:layout_marginTop="35dp"
        android:inputType="textPersonName"
        android:id="@+id/giris_guncelle"
        android:layout_height="wrap_content"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:onClick="isimGuncelle"
        android:hint="İsim Güncelleme"
        android:layout_marginTop="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:hint="Password"
        android:textAlignment="center"
        android:layout_marginTop="35dp"
        android:inputType="textPassword"
        android:id="@+id/giris_password_guncelle"
        android:layout_height="wrap_content"/>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:onClick="sifreGuncelle"
        android:hint=" Şifre Güncelleme"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:onClick="veriSil"
        android:layout_marginBottom="15dp"
        android:hint="Sil"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginTop="12dp"/>



</LinearLayout>